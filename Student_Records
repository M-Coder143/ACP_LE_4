import os 

doc_path = os.path.expanduser('~/Documents')

while True: 
        print("======== Registration ========")
        print("1. Register Student\n2. Open Student Record\n3. Exit")
        choice = input("Enter your choice: ")

        if choice == "1":
            try:
                student_no = input("Enter Student No.: ")
                full_name = input("Enter Full Name: ")
                program = input("Enter Program: ")
                age = input("Enter Age: ")
                gender = input("Enter Gender: ")
                birthday = input("Enter Birthday: ")
                contact_no = input("Enter Contact No.: ")
                
                data = [
                    f"Student No.: {student_no}",
                    f"Full Name: {full_name}.",
                    f"Program: {program}",
                    f"Age: {age}",
                    f"Gender: {gender}",
                    f"Birthday: {birthday}",
                    f"Contact No.: {contact_no}"
                ]

                with open(f"{student_no}.txt", "w") as f:
                    for item in data:
                        f.write(item + "\n")
                print("Student registered successfully!")

            except Exception as e:
                print(f"An error occurred while registering the student: {e}")

        elif choice == "2":
                student_no = input("Enter Student No.: ")
                file_path = (f"{student_no}.txt")
                try:
                    with open(file_path, "r") as f:
                        record = f.readlines()
                        print("Student Record:", student_no)
                        for line in record:
                            print(line.strip())
                except FileNotFoundError:
                    print("Student record not found.")

        elif choice == "3":
            print("Goodbye!")
            break

        else:
            print("Invalid choice. Please enter a valid number.")
